<!-- ADMIN TABLE -->

<h2>Adminisztrátorok szerkesztése</h2>

<div class="add_new">
  <%= link_to "Új adminisztrátor hozzáadása", new_admin_path %>
</div>

<table id="box-table-a">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Módosít</th>
      <th scope="col">Töröl</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= link_to"#{admin.email}", edit_admin_path(admin) %></td>
        <td><%= link_to"Módosít", edit_admin_path(admin) %></td>
        <td><%= link_to"Töröl", admin, :confirm => 'Are you sure?', :method => "delete" %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<!-- END ADMIN TABLE -->

